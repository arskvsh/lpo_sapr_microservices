{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Queries": {
    "GetCourseList": "SELECT * FROM CoursesList",
    "GetCourse": "SELECT * FROM CoursesList WHERE id = {0}",
    "GetCourseFeed": "SELECT * FROM CourseFeedPosts WHERE course_id = {0}",
    "AddPostToCourseFeed": "INSERT INTO CourseFeedPosts (course_id, dateandtime, content) VALUES ({0}, '{1}', '{2}')"
  }
}
